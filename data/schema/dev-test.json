{
  "$id": "http://accessibilitysupported.com/dev-test.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "at": {
      "type": "object",
      "properties": {
        "browsers": {
          "type": "object",
          "properties": {
            "chrome": {
              "$ref": "#/definitions/browser"
            },
            "and_chr": {
              "$ref": "#/definitions/browser"
            },
            "edge": {
              "$ref": "#/definitions/browser"
            },
            "firefox": {
              "$ref": "#/definitions/browser"
            },
            "and_ff": {
              "$ref": "#/definitions/browser"
            },
            "ie": {
              "$ref": "#/definitions/browser"
            },
            "ios_saf": {
              "$ref": "#/definitions/browser"
            },
            "safari": {
              "$ref": "#/definitions/browser"
            }
          }
        }
      },
      "required": ["browsers"]
    },
    "browser": {
      "type": "object",
      "properties": {
        "at_version": {
          "type": "string"
        },
        "browser_version": {
          "type": "string"
        },
        "os_version": {
          "type": "string",
          "description": "The OS version indicates what accessibility APIs are in use"
        },
        "support": {
          "description": "Is the combination supported? y=yes, p=partial, n=no, na=not-applicable. If partial, please provide extra documentation as to why.",
          "type": "string",
          "enum": ["y", "p", "n", "na", "u"]
        },
        "date": {
          "description": "The date is required to help us determine which support points have priority for testing.",
          "type": "string",
          "format": "date"
        }
      },
      "required": ["support", "at_version", "browser_version", "os_version", "date"]
    },
    "history": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "message": {
          "type": "string"
        }
      },
      "required": ["date", "message"]
    },
    "state_or_property": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["title", "value"]
    }
  },
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["aam", "external", "custom"],
      "description": "The type indicates the kind of test. An AAM test checks for proper accessibility api mappings according to the AAM standards. An external test brings in the results from a test published on another site. A custom test describes the exact expectations and steps."
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "keywords": {
      "description": "Key words that are used to help find features in a search",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "url": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": ["title", "url"]
    },
    "supports_sr": {
      "type": "boolean"
    },
    "supports_vc": {
      "type": "boolean",
      "description": "A test will usually only support VC if the target element is interactive."
    },
    "sr_instructions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "vc_instructions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "css_target": {
      "type": "string"
    },
    "expected": {
      "type": "object",
      "properties": {
        "role": {
          "type": "string"
        },
        "accessible_name": {
          "type": "string"
        },
        "accessible_description": {
          "type": "string"
        },
        "states_and_properties": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/state_or_property"
          }
        }
      },
      "required": ["role", "accessible_name", "accessible_description", "states_and_properties"]
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "#/definitions/history"
      }
    },
    "core_support": {
      "type": "array"
    },
    "extended_support": {
      "type": "array"
    },
    "core_support_string": {
      "type": "string"
    },
    "extended_support_string": {
      "type": "string"
    },
    "at": {
      "type": "object",
      "properties": {
        "jaws": {
          "$ref": "#/definitions/at"
        },
        "nvda": {
          "$ref": "#/definitions/at"
        },
        "vo_ios": {
          "$ref": "#/definitions/at"
        },
        "vo_macos": {
          "$ref": "#/definitions/at"
        },
        "windoweyes": {
          "$ref": "#/definitions/at"
        },
        "narrator": {
          "$ref": "#/definitions/at"
        },
        "android": {
          "$ref": "#/definitions/at"
        },
        "dragon_win": {
          "$ref": "#/definitions/at"
        },
        "dragon_mac": {
          "$ref": "#/definitions/at"
        }
      }
    }
  },
  "required": [
    "title",
    "type",
    "description",
    "supports_sr",
    "supports_vc",
    "history",
    "at"
  ],
  "anyOf": [
    {
      "properties": {
        "type": { "enum": ["aam"] }
      },
      "required": ["expected", "css_target"]
    },
    {
      "properties": {
        "type": { "enum": ["external"] }
      },
      "required": ["url"]
    },
    {
      "properties": {
        "type": { "enum": ["custom"] }
      },
      "required": ["css_target", "sr_instructions", "vc_instructions"]
    }
  ]
}
