extends layout

block content
    div.content
        h1= 'Test: ' + test.title + ' ('+ATBrowsers.at[atId].title+'/'+ATBrowsers.browsers[browserId].title+')'

        a(href="/tests/"+test.id class="back") Go back to the test

        table
            caption Details
            thead
                tr
                    th Property
                    th Value
            tbody
                tr
                    th(scope="row") Support
                    td= test.at[atId].browsers[browserId].support
                tr
                    th(scope="row") AT Name
                    td
                        a(href="/learn/at/"+atId)=ATBrowsers.at[atId].title
                tr
                    th(scope="row") AT Version
                    td= test.at[atId].browsers[browserId].at_version
                tr
                    th(scope="row") Browser Name
                    td= ATBrowsers.browsers[browserId].title
                tr
                    th(scope="row") Browser Version
                    td= test.at[atId].browsers[browserId].browser_version
                tr
                    th(scope="row") OS version
                    td= test.at[atId].browsers[browserId].os_version
                tr
                    th(scope="row") Sample Output
                    td= test.at[atId].browsers[browserId].output ? test.at[atId].browsers[browserId].output : ''
                tr
                    th(scope="row") Notes
                    td!= test.at[atId].browsers[browserId].notes ? md.render(test.at[atId].browsers[browserId].notes) : ''

        if test.at[atId].browsers[browserId].output
            h2 Commands and Output
            p These are specific commands used to access the target element in the test, along with the resulting output.
            table
                thead
                    tr
                        th Command
                        th Command name
                        th Result
                        th Output
                tbody
                    each output in test.at[atId].browsers[browserId].output
                        tr
                            td=output.command
                            td=output.command_name
                            td=output.result
                            td=output.output

